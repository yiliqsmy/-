<script>
    function refreshCode()
    {
        $.post("http://qsmy.coco.cn/index.php?gift_code/refreshCode", {}, function (response) {
            $(".shengchengma").html(response);
            $(".shengchengma img").click(function(){
                refreshCode();
            });
        });
    }
    
    $(".floatDiv").click(function () {
        refreshCode();

        var bh = $("body,html").height();
        var bw = $("body,html").width();
        $("#fullbg").css({
            height: bh,
            width: bw,
            display: "block"
        });
        $("#showout").fadeIn(300);
        $("#fullbg").fadeIn(300);
    });

    $(".yuyue").click(function () {
        var postData = {
            type: 13,
            vcode: $(".phone").val()
        };
        $.post("http://qsmy.coco.cn/index.php?gift_code/get_by_ip", postData, function (response) {
            if (response.status == 1)
            {
                $(".jihuonum").text(response.code);
                $("#showout").hide();
                $("#showout2").show();
            }
            else if (response.status == -1)
            {
                alert('抱歉，没有激活码了');
            }
            else if (response.status == -2)
            {
                alert('您已经领过了');
            }
            else if (response.status == -3)
            {
                alert('验证码错误');
            }
        }, 'json');

    });

    $("#closeCoverPop2").click(function () {
        $("#showout2").hide();


    });
    $("#closeCoverPop").click(function () {
        $("#fullbg,.cdialog").fadeOut(300);
    });

    $("#closeCoverPop2").click(function () {
        $("#fullbg2,.cdialog2").fadeOut(300);
    });

    $("#closeCoverPop3").click(function () {
        $("#fullbg3,.cdialog3").fadeOut(300);
    });
</script>    </body>
